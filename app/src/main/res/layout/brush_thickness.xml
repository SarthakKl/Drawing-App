<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/small_brush_thickness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_brush_size"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/medium_brush_thickness"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="Small Brush Thickness" />

    <ImageButton
        android:id="@+id/medium_brush_thickness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/medium_brush_size"
        app:layout_constraintTop_toBottomOf="@id/small_brush_thickness"
        app:layout_constraintBottom_toTopOf="@id/large_brush_thickness"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="Medium Brush Thickness" />

    <ImageButton
        android:id="@+id/large_brush_thickness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/large_brush_size"
        app:layout_constraintTop_toBottomOf="@id/medium_brush_thickness"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="Large Brush Thickness" />

</androidx.constraintlayout.widget.ConstraintLayout>